<div id="choice-partial" style="display: none;">
    <h1 class="w3-jumbo w3-animate-top" style="text-align: center; font-size: 25px !important;">
        I invite you to 1 of these movies and hope you'll accept my invitation...
        When you're ready please use this <a data-bind="click: useLink" style="cursor: pointer; text-decoration: underline">link</a>.
    </h1>
    <ul class="nav nav-tabs nav-justified" style="padding-top: 20px">
        <li data-bind="click: selectMovie('kinosmena')" id="kinosmena-li" role="presentation" class="active"><a href="#">Kinosmena</a></li>
        <li data-bind="click: selectMovie('jungle')" id="jungle-li" role="presentation"><a href="#">Джунгли</a></li>
        <li data-bind="click: selectMovie('jigsaw')" id="jigsaw-li" role="presentation"><a href="#">Пила 8</a></li>
    </ul>
    <!-- ko if: currentTab() == "kinosmena" -->
    <div id="kinosmena">
        <!-- ko if: currentBottomTab() == "photos" -->
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="@Url.Content("~/Content/maxresdefault.jpg")" alt="Los Angeles">
                </div>

                <div class="item">
                    <img src="@Url.Content("~/Content/CharliePoppyPoster_S&S.jpg")" alt="Chicago">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- /ko -->
        <!-- ko if: currentBottomTab() == "content" -->
        <div class="carousel slide custom-overflow">
            @Html.Partial("KinosmenaContent")
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->
